extends ../layout

block content
    h2.ml-3 Carts
    if carts && carts.length > 0
      table.table
        thead
        tbody
          each cart in carts
            tr
              td
                img(src='https://picsum.photos/200/300', style='max-width: 100px')
              td
                h2 Sanh hay hay hay
                div
                  p Description
                  a(href='/cart/:id/delete')
                    | Delete
              td
                h2 1000000 $
    else
      h2.text-center Cart is empty !
      a(href='/').ml-3  Back to book stores